---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'section'> {
  headline: string;
  subheadline: string;
  ctaText: string;
  ctaLink: string;
  image: string; // URL for the hero image
}

const { headline, subheadline, ctaText, ctaLink, image, ...attrs } = Astro.props;
---

<section
  class="relative overflow-hidden bg-[#0F172A] py-16 md:py-24 lg:py-32 text-white"
  {...attrs}
>
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center gap-12 md:gap-16">
      {/* Text Content */}
      <div class="flex-1 text-center md:text-left z-10">
        <h1 class="font-['Exo_2'] text-4xl sm:text-5xl lg:text-6xl font-extrabold leading-tight mb-4 text-white">
          {headline}
        </h1>
        <p class="font-['Inter'] text-lg sm:text-xl text-[#718096] mb-8 max-w-2xl mx-auto md:mx-0">
          {subheadline}
        </p>
        <a
          href={ctaLink}
          class="inline-block px-8 py-4 bg-gradient-to-r from-[#00A3FF] to-[#0077CC] text-white font-['Inter'] text-lg font-semibold shadow-lg hover:shadow-xl transition-shadow duration-300 ease-in-out"
          aria-label={ctaText}
        >
          {ctaText}
        </a>
      </div>

      {/* Image Content */}
      <div class="flex-1 relative z-0 md:flex md:justify-end">
        <img
          src={image}
          alt={headline}
          class="w-full h-auto max-w-md lg:max-w-lg object-cover shadow-2xl"
          loading="eager"
          decoding="async"
        />
      </div>
    </div>
  </div>
</section>