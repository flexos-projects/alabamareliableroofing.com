---

<footer class="bg-[#0F172A] text-[#FFFFFF] shadow-md font-['Inter'] py-8" {...attrs}>
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center md:text-left">
      <!-- Brand / Copyright Section -->
      <div>
        <a href="/" class="text-2xl font-['Exo_2'] text-[#FFFFFF] hover:text-[#00A3FF] transition-colors duration-300" aria-label="Back to homepage">
          Enigmatic Precision
        </a>
        <p class="text-[#718096] text-sm mt-4">&copy; {new Date().getFullYear()} Enigmatic Precision. All rights reserved.</p>
      </div>

      <!-- Navigation Links Section -->
      <nav class="md:col-span-1" aria-label="Footer Navigation">
        <h3 class="text-lg font-['Exo_2'] text-[#FFFFFF] mb-4">Quick Links</h3>
        <ul class="space-y-2">
          {navLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-[#718096] hover:text-[#00A3FF] transition-colors duration-300"
              >
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <!-- Social Links Section -->
      <div class="md:col-span-1">
        <h3 class="text-lg font-['Exo_2'] text-[#FFFFFF] mb-4">Connect With Us</h3>
        <div class="flex justify-center md:justify-start space-x-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-[#718096] hover:text-[#00A3FF] transition-colors duration-300"
              aria-label={social.name}
            >
              <svg
                class="w-6 h-6"
                fill="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <title>{social.name} icon</title>
                <path d={social.icon}></path>
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>